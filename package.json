{
  "name": "kimochi",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "dev": "npx dotenv -e .env.local -- next dev -H 127.0.0.1 -p 3001",
    "build": "npx dotenv -e .env.prod.local -- next build",
    "start": "next start",
    "lint": "next lint",
    "test": "echo 'Running all tests...' && npm run test:lint && npm run test:type && npm run test:build",
    "test:lint": "next lint",
    "test:type": "tsc --noEmit",
    "test:build": "next build",
    "test:unit": "echo 'Unit tests not configured yet'",
    "superadmin:create": "node scripts/create-super-admin.js",
    "superadmin:create:prod": "npx dotenv -e .env.prod.local -- node scripts/create-super-admin.js",
    "announce:system-change": "npx dotenv -e .env.prod.local -- node scripts/create-system-announcement.js",
    "env:verify": "node -e \"console.log('Using .env.local only')\"",
    "db:status": "npx dotenv -e .env.prod.local -- npx prisma migrate status",
    "db:deploy": "npx dotenv -e .env.prod.local -- npx prisma migrate deploy",
    "db:baseline:prod": "npx dotenv -e .env.prod.local -- sh -lc 'for d in prisma/migrations/*/; do npx prisma migrate resolve --applied \"$(basename \"$d\")\"; done'",
    "db:push": "npx dotenv -e .env.prod.local -- npx prisma db push",
    "cache:clear": "rm -rf .next-prod/cache .next-dev/cache || true",
    "rebuild:clean": "npm run cache:clear && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "jszip": "3.10.1",
    "next": "15.4.6",
    "nodemailer": "^6.9.13",
    "prisma": "^6.13.0",
    "qrcode": "^1.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.33.4",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "playwright": "^1.47.0",
    "pm2": "^6.0.8",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
