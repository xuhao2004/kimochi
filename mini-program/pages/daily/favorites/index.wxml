<view class="apple-page">
  <view class="apple-card">
    <view class="apple-title">心语收藏</view>
  </view>
  <view class="apple-section">
    <block wx:for="{{items}}" wx:key="id">
      <view class="apple-card fade-in" style="margin-top:12rpx;">
        <view class="apple-p">{{item.metadata}}</view>
        <view class="apple-p apple-muted" style="margin-top:6rpx;">{{item._createdAt}}</view>
        <view style="display:flex; gap:12rpx; margin-top:8rpx;">
          <button class="apple-button" data-id="{{item.id}}" bindtap="remove">移除</button>
        </view>
      </view>
    </block>
    <view wx:if="{{!items.length}}" class="apple-card" style="margin-top:12rpx;">
      <view class="apple-p apple-muted">暂无收藏</view>
    </view>
  </view>
</view>

