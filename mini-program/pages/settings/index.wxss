/* pages/settings/index.wxss */

.container {
  background: var(--background-primary);
  min-height: 100vh;
  padding: 32rpx;
}

/* 用户信息区域 */
.user-section {
  margin-bottom: 48rpx;
  background: linear-gradient(135deg, var(--primary-color)08, var(--secondary-color)08);
  border: 2rpx solid var(--primary-color)20;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-icon {
  font-size: 48rpx;
  color: white;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 设置区域 */
.settings-section {
  margin-bottom: 48rpx;
}

.debug-section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.debug-title {
  color: var(--warning-color);
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 设置项 */
.setting-item {
  transition: all 0.2s ease;
}

.setting-item.dangerous {
  border: 2rpx solid var(--error-color)30;
  background: var(--error-color)05;
}

.setting-item.dangerous .setting-title {
  color: var(--error-color);
}

.setting-content {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}

.setting-info {
  flex: 1;
  min-width: 0;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.setting-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.setting-value {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-top: 4rpx;
  font-weight: 500;
}

.setting-action {
  flex-shrink: 0;
}

.arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
}

/* Switch样式 */
switch {
  transform: scale(1.2);
}

/* 版本信息 */
.version-section {
  margin-top: 48rpx;
}

.version-info {
  text-align: center;
  padding: 32rpx;
  background: var(--background-secondary);
  border-radius: var(--radius-large);
  border: 2rpx dashed var(--border-color);
}

.version-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.version-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  display: block;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .container {
    padding: 24rpx;
  }
  
  .user-info {
    padding: 24rpx;
  }
  
  .user-avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
  }
  
  .avatar-icon {
    font-size: 40rpx;
  }
  
  .setting-content {
    padding: 28rpx 24rpx;
    gap: 20rpx;
  }
  
  .setting-icon {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }
  
  .setting-title {
    font-size: 30rpx;
  }
  
  .setting-desc {
    font-size: 24rpx;
  }
}

/* 动画效果 */
.setting-item:active {
  transform: scale(0.98);
}

.version-info:active {
  background: var(--background-tertiary);
}

/* 危险操作警告动画 */
.setting-item.dangerous:active {
  animation: shake 0.5s;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

/* 调试模式特殊样式 */
.debug-section {
  border: 2rpx dashed var(--warning-color)50;
  border-radius: var(--radius-large);
  padding: 24rpx;
  background: var(--warning-color)05;
}

.debug-section .settings-list {
  gap: 12rpx;
}
