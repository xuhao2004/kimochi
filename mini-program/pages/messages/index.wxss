/* pages/messages/index.wxss */

.container {
  background: var(--background-primary);
  min-height: 100vh;
}

/* 标签区域 */
.tabs-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--background-secondary);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tabs-list {
  display: flex;
  gap: 8rpx;
}

.tab-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: var(--background-tertiary);
  border: 2rpx solid transparent;
  border-radius: var(--radius-large);
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.tab-item.active {
  background: var(--primary-color)10;
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 28rpx;
}

.tab-name {
  font-size: 28rpx;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--error-color);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 999rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1.2;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: var(--border-color);
}

.action-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
  background: var(--background-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

.search-box {
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  padding: 4rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-primary);
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  background: var(--text-tertiary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

/* 聊天列表 */
.chat-list {
  flex: 1;
}

/* 登录区域 */
.login-section {
  padding: 80rpx 32rpx;
}

.login-content {
  text-align: center;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, var(--primary-color)08, var(--secondary-color)08);
  border: 2rpx solid var(--primary-color)30;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.login-btn {
  margin: 0 auto;
  width: 240rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
}

.loading-text {
  margin-top: 16rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 空状态 */
.empty-section {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.empty-action-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--radius-large);
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 聊天室列表 */
.rooms-list {
  padding: 0;
}

.room-item {
  position: relative;
  background: var(--background-secondary);
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.room-item:active {
  background: var(--background-tertiary);
  transform: scale(0.995);
}

.room-item.pinned {
  background: linear-gradient(90deg, var(--warning-color)08, transparent);
  border-left: 6rpx solid var(--warning-color);
}

.pin-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 24rpx;
  opacity: 0.7;
}

.room-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

/* 头像区域 */
.room-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.room-avatar {
  display: block;
}

.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--error-color);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 999rpx;
  min-width: 32rpx;
  text-align: center;
  border: 2rpx solid var(--background-secondary);
  line-height: 1.2;
}

.group-indicator {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: var(--secondary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: 2rpx solid var(--background-secondary);
}

/* 聊天信息 */
.room-info {
  flex: 1;
  min-width: 0;
}

.room-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.room-title {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.room-title.unread {
  font-weight: 600;
  color: var(--text-primary);
}

.room-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  flex-shrink: 0;
}

.room-subtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.last-message {
  font-size: 28rpx;
  color: var(--text-secondary);
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
}

.last-message.unread {
  color: var(--text-primary);
  font-weight: 500;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--error-color);
  border-radius: 50%;
  flex-shrink: 0;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .tabs-section {
    padding: 20rpx 24rpx;
  }
  
  .room-content {
    padding: 20rpx 24rpx;
  }
  
  .room-avatar-wrapper {
    margin-right: 20rpx;
  }
  
  .tab-item {
    padding: 12rpx 20rpx;
    font-size: 26rpx;
  }
  
  .actions {
    gap: 12rpx;
  }
  
  .action-btn {
    width: 64rpx;
    height: 64rpx;
  }
  
  .action-icon {
    font-size: 28rpx;
  }
  
  .room-title {
    max-width: 300rpx;
  }
  
  .last-message {
    max-width: 300rpx;
  }
}

/* 动画效果 */
.fade-in {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.3s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载动画 */
.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 特殊状态样式 */
.room-item:last-child {
  border-bottom: none;
}

/* 长按反馈 */
.room-item:active {
  background: var(--background-tertiary);
}

/* 头像点击区域 */
.room-avatar-wrapper:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 搜索输入聚焦 */
.search-input:focus {
  outline: none;
}

.search-input-wrapper:focus-within {
  background: var(--background-secondary);
}