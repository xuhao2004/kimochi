<view class="apple-page safe-bottom">
  <view class="apple-card">
    <view class="apple-title">账号密码登录</view>
    <view class="apple-field">
      <view class="apple-label">邮箱/手机号/学号</view>
      <input class="apple-input" placeholder="请输入账号" placeholder-class="apple-placeholder" cursor-spacing="28" adjust-position="true" value="{{login.identifier}}" bindinput="onLoginId" />
    </view>
    <view class="apple-field">
      <view class="apple-label">密码</view>
      <input class="apple-input" placeholder="请输入密码" placeholder-class="apple-placeholder" cursor-spacing="28" adjust-position="true" confirm-type="done" password value="{{login.password}}" bindinput="onLoginPwd" />
    </view>
    <button class="apple-button apple-button-primary" bindtap="doPasswordLogin">登录</button>

    <view class="apple-section">
      <view class="apple-h2">或</view>
      <button class="apple-button" bindtap="goConfirmLogin">输入登录码确认</button>
    </view>
  </view>
</view>


