/* pages/scan/index.wxss */

.container {
  background: var(--background-primary);
  min-height: 100vh;
  padding: 32rpx;
}

/* 头部区域 */
.header-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.header-title {
  flex: 1;
}

.help-btn {
  width: 72rpx;
  height: 72rpx;
  background: var(--background-secondary);
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.help-btn:active {
  transform: scale(0.9);
  background: var(--background-tertiary);
}

.help-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 快捷操作区域 */
.actions-section {
  margin-bottom: 48rpx;
}

.actions-grid {
  display: grid;
  gap: 24rpx;
}

.action-card {
  padding: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  overflow: hidden;
  position: relative;
}

.action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: var(--card-color, var(--primary-color));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-card:active::before {
  opacity: 1;
}

.action-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.action-arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
  flex-shrink: 0;
}

/* 通用扫码按钮 */
.scan-section {
  margin-bottom: 48rpx;
}

.scan-btn {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  border: none;
  border-radius: var(--radius-xl);
  padding: 0;
  box-shadow: 0 12rpx 48rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
}

.scan-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.4);
}

.scan-btn-content {
  padding: 48rpx 32rpx;
  text-align: center;
  position: relative;
}

.scan-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  display: block;
}

.scan-text {
  font-size: 40rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.scan-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 登录提示 */
.login-prompt {
  margin-bottom: 48rpx;
  background: linear-gradient(135deg, var(--primary-color)08, var(--secondary-color)08);
  border: 2rpx solid var(--primary-color)30;
}

.prompt-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.prompt-icon {
  font-size: 64rpx;
  flex-shrink: 0;
}

.prompt-text {
  flex: 1;
}

.prompt-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.prompt-btn {
  flex-shrink: 0;
}

/* 扫码历史 */
.history-section {
  margin-bottom: 48rpx;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.clear-history-btn {
  padding: 12rpx 24rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-medium);
  transition: all 0.2s ease;
}

.clear-history-btn:active {
  transform: scale(0.95);
  background: var(--border-color);
}

.clear-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  transition: all 0.2s ease;
}

.history-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
}

.history-icon {
  width: 80rpx;
  height: 80rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.history-status {
  flex-shrink: 0;
}

.status-icon {
  font-size: 32rpx;
}

/* 使用说明 */
.tips-section {
  margin-bottom: 48rpx;
}

.tips-card {
  background: linear-gradient(135deg, var(--background-secondary), var(--background-tertiary)30);
}

.tips-header {
  margin-bottom: 24rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-dot {
  font-size: 28rpx;
  color: var(--primary-color);
  line-height: 1.5;
  margin-top: 2rpx;
}

.tip-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .container {
    padding: 24rpx;
  }
  
  .action-card {
    padding: 24rpx;
    gap: 20rpx;
  }
  
  .action-icon {
    width: 80rpx;
    height: 80rpx;
    font-size: 40rpx;
  }
  
  .action-title {
    font-size: 32rpx;
  }
  
  .action-desc {
    font-size: 26rpx;
  }
  
  .scan-btn-content {
    padding: 40rpx 24rpx;
  }
  
  .scan-icon {
    font-size: 64rpx;
  }
  
  .scan-text {
    font-size: 36rpx;
  }
  
  .scan-desc {
    font-size: 26rpx;
  }
  
  .prompt-content {
    gap: 20rpx;
  }
  
  .prompt-icon {
    font-size: 56rpx;
  }
  
  .history-content {
    padding: 20rpx 24rpx;
    gap: 20rpx;
  }
  
  .history-icon {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }
}

/* 动画效果 */
.fade-in {
  opacity: 0;
  transform: translateY(30rpx);
  animation: fadeInUp 0.4s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 长按反馈 */
.action-card:active {
  transform: scale(0.98);
}

.history-item:active {
  transform: scale(0.98);
}

/* 特殊状态 */
.action-card:active {
  border-color: var(--card-color, var(--primary-color))40;
}

/* 渐变背景动画 */
.scan-btn {
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* 按钮按下时停止动画 */
.scan-btn:active {
  animation-play-state: paused;
}

/* 历史记录成功/失败状态 */
.history-item[data-success="false"] .history-icon {
  background: var(--error-color)20;
  color: var(--error-color);
}

.history-item[data-success="true"] .history-icon {
  background: var(--success-color)20;
  color: var(--success-color);
}
