/* pages/home/index.wxss */

.container {
  padding: 32rpx 32rpx 0;
  background: var(--background-primary);
  min-height: 100vh;
}

/* 头部区域 */
.header-section {
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-radius: var(--radius-xl);
  transition: all 0.3s ease;
}

.user-info:active {
  transform: scale(0.98);
}

.user-details {
  flex: 1;
  margin-left: 24rpx;
}

.user-name {
  margin-bottom: 4rpx;
}

.header-actions {
  position: relative;
  display: flex;
  align-items: center;
}

.header-actions .badge {
  position: absolute;
  right: 24rpx;
  top: -8rpx;
  z-index: 1;
}

/* 今日心语 */
.quote-content {
  padding: 24rpx 0;
  line-height: 1.8;
}

.quote-placeholder {
  padding: 48rpx 0;
  text-align: center;
  opacity: 0.6;
}

/* 天气卡片 */
.weather-info {
  flex: 1;
}

.weather-details {
  display: flex;
  align-items: baseline;
  margin-top: 8rpx;
}

.weather-extra {
  opacity: 0.7;
}

/* 快捷操作 */
.feature-card {
  padding: 32rpx 24rpx;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 热门动态 */
.posts-list {
  display: flex;
  flex-direction: column;
}

.post-item {
  transition: all 0.2s ease;
}

.post-content {
  line-height: 1.6;
}

.post-meta {
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
}

.post-stats {
  opacity: 0.7;
}

/* 区域标题 */
.section-title {
  display: flex;
  align-items: center;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.3);
}

.loading-content {
  padding: 48rpx 64rpx;
  border-radius: var(--radius-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 下拉刷新 */
.refresh-indicator {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  background: var(--background-secondary);
  padding: 16rpx 32rpx;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-medium);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .container {
    padding: 24rpx 24rpx 0;
  }
  
  .feature-card {
    padding: 24rpx 20rpx;
    min-height: 180rpx;
  }
  
  .feature-icon {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }
  
  .user-info {
    padding: 20rpx 24rpx;
  }
}

/* 动画增强 */
.fade-in {
  opacity: 0;
  transform: translateY(30rpx);
  animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 特殊状态 */
.user-info[data-logged="false"] .user-avatar {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
}

/* 长按反馈 */
.card-hover:active {
  transform: scale(0.95);
}

/* 徽章增强 */
.badge {
  position: relative;
  z-index: 1;
}

.badge::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  background: var(--error-color);
  border-radius: inherit;
  opacity: 0.2;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { 
    opacity: 0.2;
    transform: scale(1);
  }
  50% { 
    opacity: 0.4;
    transform: scale(1.1);
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-secondary);
}

.empty-state .empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-state .empty-text {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 错误状态 */
.error-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--error-color);
}

.error-state .error-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.error-state .error-text {
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.error-state .retry-btn {
  background: var(--error-color);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: var(--radius-medium);
  font-size: 28rpx;
}
