/* pages/about/index.wxss */

.container {
  background: var(--background-primary);
  min-height: 100vh;
  padding: 32rpx;
}

/* 应用信息区域 */
.app-info-section {
  margin-bottom: 48rpx;
  background: linear-gradient(135deg, var(--primary-color)08, var(--secondary-color)08);
  border: 2rpx solid var(--primary-color)20;
}

.app-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: var(--radius-xl);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  transition: all 0.3s ease;
}

.app-logo:active {
  transform: scale(0.95);
}

.logo-icon {
  font-size: 60rpx;
}

.app-details {
  flex: 1;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  font-family: monospace;
}

.app-description {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 统计数据 */
.statistics {
  display: flex;
  align-items: center;
  padding-top: 32rpx;
  border-top: 2rpx solid var(--border-color);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  transition: all 0.2s ease;
  border-radius: var(--radius-medium);
}

.stat-item:active {
  background: var(--background-tertiary);
  transform: scale(0.95);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  display: block;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  display: block;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background: var(--border-color);
}

/* 区域标题 */
.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 功能网格 */
.features-section {
  margin-bottom: 48rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-card {
  transition: all 0.2s ease;
}

.feature-icon {
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.4;
}

/* 团队区域 */
.team-section {
  margin-bottom: 48rpx;
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.team-member {
  transition: all 0.2s ease;
}

.member-content {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.member-avatar {
  width: 96rpx;
  height: 96rpx;
  background: var(--background-tertiary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.member-role {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.member-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 链接区域 */
.links-section {
  margin-bottom: 48rpx;
}

.links-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.link-item {
  transition: all 0.2s ease;
}

.link-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
}

.link-icon {
  width: 72rpx;
  height: 72rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.link-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  flex: 1;
}

.link-arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
}

/* 更新日志 */
.changelog-section {
  margin-bottom: 48rpx;
}

.changelog-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.changelog-item {
  transition: all 0.2s ease;
}

.changelog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 0 32rpx;
  padding-top: 32rpx;
}

.changelog-version {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
  font-family: monospace;
}

.changelog-date {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.changelog-summary {
  padding: 0 32rpx;
  padding-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.change-item {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 分享区域 */
.share-section {
  margin-bottom: 48rpx;
  text-align: center;
}

.share-btn {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  box-shadow: 0 12rpx 48rpx rgba(0, 122, 255, 0.3);
}

.share-text {
  font-size: 36rpx;
  font-weight: 600;
}

/* 版权信息 */
.copyright-section {
  text-align: center;
  padding: 32rpx;
  border-top: 1rpx solid var(--border-color);
}

.copyright-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  display: block;
}

.copyright-desc {
  font-size: 26rpx;
  color: var(--text-tertiary);
  display: block;
  font-style: italic;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .container {
    padding: 24rpx;
  }
  
  .app-header {
    flex-direction: column;
    text-align: center;
  }
  
  .app-logo {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .member-content {
    padding: 24rpx;
  }
  
  .member-avatar {
    width: 80rpx;
    height: 80rpx;
    font-size: 40rpx;
    margin-right: 20rpx;
  }
  
  .statistics {
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .stat-item {
    flex: 0 0 calc(50% - 8rpx);
  }
  
  .stat-divider {
    display: none;
  }
}

/* 动画效果 */
.fade-in {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.4s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 交互反馈 */
.feature-card:active,
.team-member:active,
.link-item:active,
.changelog-item:active {
  transform: scale(0.98);
}

/* Logo特殊效果 */
.app-logo {
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.2);
}

.app-logo:active {
  box-shadow: 0 12rpx 48rpx rgba(0, 122, 255, 0.4);
}

/* 渐变文字效果 */
.app-name {
  background: linear-gradient(135deg, var(--text-primary), var(--primary-color));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 功能卡片悬停效果 */
.feature-card {
  border: 2rpx solid transparent;
}

.feature-card:active {
  border-color: var(--primary-color)30;
  background: var(--primary-color)05;
}
