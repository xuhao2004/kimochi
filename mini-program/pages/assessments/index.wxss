/* pages/assessments/index.wxss */

.container {
  background: var(--background-primary);
  min-height: 100vh;
}

/* 头部区域 */
.header-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 32rpx;
  background: var(--background-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

.header-title {
  flex: 1;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: var(--border-color);
}

.action-btn .icon {
  font-size: 32rpx;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
  background: var(--background-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

.search-box {
  background: var(--background-tertiary);
  border-radius: var(--radius-large);
  padding: 4rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-primary);
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  background: var(--text-tertiary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

/* 分类区域 */
.categories-section {
  background: var(--background-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

.categories-scroll {
  white-space: nowrap;
}

.categories-list {
  display: flex;
  padding: 24rpx 32rpx 32rpx;
  gap: 16rpx;
}

.category-tag {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: var(--background-tertiary);
  border: 2rpx solid transparent;
  border-radius: var(--radius-large);
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.category-tag.active {
  background: var(--tag-color, var(--primary-color))10;
  border-color: var(--tag-color, var(--primary-color));
  color: var(--tag-color, var(--primary-color));
}

.category-tag:active {
  transform: scale(0.95);
}

.category-icon {
  font-size: 32rpx;
}

.category-name {
  font-weight: 500;
}

/* 测评列表 */
.assessments-section {
  padding: 32rpx;
}

.assessments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.assessment-card {
  position: relative;
  overflow: visible;
}

.completed-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--success-color);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-medium);
  font-size: 24rpx;
  font-weight: 600;
  z-index: 1;
  box-shadow: var(--shadow-light);
}

.assessment-header {
  margin-bottom: 16rpx;
}

.assessment-title {
  margin-bottom: 12rpx;
}

.assessment-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.difficulty-tag {
  padding: 6rpx 12rpx;
  border-radius: var(--radius-small);
  font-size: 24rpx;
  font-weight: 600;
}

.assessment-description {
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.assessment-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.assessment-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

.assessment-action {
  flex-shrink: 0;
}

.start-btn {
  padding: 16rpx 32rpx;
  border-radius: var(--radius-large);
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s ease;
}

.start-btn.new {
  background: var(--primary-color);
  color: white;
}

.start-btn.retake {
  background: var(--warning-color)20;
  color: var(--warning-color);
  border: 2rpx solid var(--warning-color);
}

.start-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 登录提示 */
.login-prompt {
  background: linear-gradient(135deg, var(--primary-color)08, var(--secondary-color)08);
  border: 2rpx solid var(--primary-color)30;
}

.prompt-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.prompt-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

/* 响应式适配 */
@media screen and (max-width: 480rpx) {
  .header-section {
    padding: 24rpx;
  }
  
  .assessments-section {
    padding: 24rpx;
  }
  
  .assessment-stats {
    gap: 24rpx;
  }
  
  .categories-list {
    padding: 20rpx 24rpx 28rpx;
    gap: 12rpx;
  }
  
  .category-tag {
    padding: 12rpx 20rpx;
    font-size: 26rpx;
  }
}

/* 动画效果 */
.fade-in {
  opacity: 0;
  transform: translateY(40rpx);
  animation: fadeInUp 0.4s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 长按反馈 */
.assessment-card:active {
  transform: scale(0.98);
}

/* 特殊状态样式 */
.assessment-card.completed {
  background: linear-gradient(135deg, var(--success-color)05, transparent);
  border-color: var(--success-color)30;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  z-index: 9999;
}

.loading-content {
  padding: 48rpx 64rpx;
  border-radius: var(--radius-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
}
